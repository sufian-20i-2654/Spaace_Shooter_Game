write macro filename
mov ah,40h
mov bx,fhandle
mov dx,offset buffer
mov cx,lengthof buffer
int 21h
jc exit2
exit2:
endm

close macro filename
mov ah,3eh
mov bx,fhandle
int 21h
jc exit3
exit3:
endm

read macro filename
